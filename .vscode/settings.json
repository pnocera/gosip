{
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.renderWhitespace": "all",
  "go.formatTool": "goimports",
  "go.testFlags": ["-count=1", "-v"],
  "go.formatFlags": ["-s", "-w"],
  "go.lintOnSave": "file",
  "files.exclude": {
    "**/*_test.go": false,
    "**/*_gen.go": true
  },
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false
}
